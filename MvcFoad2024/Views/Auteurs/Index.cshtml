@model PagedList.IPagedList<MvcFoad2024.Models.Auteur>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste des auteurs</h2>

<p>
    @Html.ActionLink("Nouveau", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Auteurs", FormMethod.Get))
    {
    <p>
        Recherche: @Html.TextBox("searchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Rechercher" class="btn btn-default" />
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Nom", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Prénom", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Téléphone", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Matricule", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Spécialité", "Index", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Ancienneté", "Index", new { sortOrder = ViewBag.DateSortParm, searchString = ViewBag.CurrentFilter })
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.motDePasse)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Matricule)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Etat)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Specialite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Anciennete)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdUtilisateur }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdUtilisateur }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdUtilisateur })
                </td>
            </tr>
        }

    </table>
    <br />
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

